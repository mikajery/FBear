<td>
	<div<%= ' class=active' if current_url?(item.path) %>>
    <% unless item.items.empty? %>
      <div class="b-dropdown">
        <div class="current">
          <%= item.title %>
        </div>

        <div class="dropdown">
          <div class="wrap">
            <div class="inner">
              <ul>
                <% item.items.each do |subitem| %>
                  <li>
                    <a href="<%= subitem.path %>">
                      <%= subitem.title %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <a href="<%= item.path %>">
        <%= item.title %>
      </a>
    <% end %>
	</div>
</td>