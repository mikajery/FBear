<% if cart.items.empty? %>
    Ваша корзина пуста
<% else %>
  <ul class="cart-items">
    <% cart.items.each do |item| %>
      <%= render 'item', :item => item %>
    <% end %>

    <li class="cart-item cart-item-btn">
      <div class="cart-btn">
        <a class="btn" href="<%= cart_info_path %>">
          Продолжить оформление
        </a>
      </div>
    </li>
  </ul>
<% end %>