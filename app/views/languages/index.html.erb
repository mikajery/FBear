<h1>Языки</h1>

<table class="table table-stripped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th width="100px"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %>, <%= language.code %></td>
        <td>
          <div class="pull-right">
            <%= link_to raw('<i class="icon icon-pencil"></i>'), edit_language_path(language), class: 'btn btn-mini' %>
            <%= link_to raw('<i class="icon icon-trash icon-white"></i>'), language, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="form-actions">
  <%= link_to 'New Language', new_language_path, class: 'btn btn-primary' %>
</div>
