<div class="container order">
  <h1>
    <% if @order.type == 'Order::Preorder' %>
        <%= T "Спасибо за предзаказ!" %>
    <% elsif @order.type == 'Order::Robust' %>
        <%= T "Спасибо за заказ!" %>
    <% end %>
  </h1>

  <% unless @current_page.content.empty? %>
    <div class="content">
      <%= @current_page.content.html_safe %>
    </div>
  <% end %>
</div>