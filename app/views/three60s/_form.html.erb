<%= simple_form_for @three60, :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <%= f.input :name %>

  <% if @three60.id %>
    <%= image_field @three60, 'src', f, [300, 300] %>
  <% end %>

  <% unless @three60.id %>
    <%= f.input :zip, as: :file %>
    <%= f.input :good_id, as: :hidden %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, save_or_update(@three60), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                edit_good_path(@good), :class => 'btn' %>
  </div>
<% end %>
