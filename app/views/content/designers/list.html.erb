<div class="designers">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span6">
        <h1>
          <%= @current_page.title %>
        </h1>

        <%= @current_page.content.html_safe %>
      </div>

        <% @designers.each_with_index do |d, index| %>
          <% index = index + 3 %>
          <% if index > 1 and index % 5 == 0 %>
            <div class="row-fluid">
          <% end %>

            <div class="span2">
              <a href="<%= designers_item_path d %>" class="designers-item">  
                <img src="<%= image_url(d.avatar) %>" />
              </a>
            </div>

          <% if index == 1 or index > 1 and index % 5 == 4 %>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>