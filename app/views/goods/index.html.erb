<%- model_class = Good -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
                new_good_path,
                :class => 'btn btn-mini' %>

  </h1>
</div>

<% if @goods.empty? %>
  <%= empty_list %>
<% else %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th width="60px"></th>
      </tr>
    </thead>
    <tbody>
      <% @goods.each do |good| %>
        <tr>
          <td><%= link_to good.id, good_path(good) %></td>
          <td>
            <%= link_to t('.edit', :default => pencil_icon),
                        edit_good_path(good), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => trash_icon(true)),
                        good_path(good),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>