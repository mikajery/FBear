<%= language_prompt %>

<%= simple_form_for [:admin, @designer], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <%= tabs [[:main, 'Основное'], [:avatar, 'Фотография'], [:about, 'О дизайнере'], [:meta, 'META']] %>

  <%= tab_contents do %>
    <%= tab_pane :main, {active: true} do %>
      <% Globalize.with_locale(@locale.slug) do %>
        <%= f.input :name %>
      <% end %>
    <% end %>

    <%= tab_pane :avatar do %>
      <%= image_field @designer, :avatar, f, [300, 300] %>
    <% end %>

    <%= tab_pane :meta do %>
      <% Globalize.with_locale(@locale.slug) do %>
        <%= f.input :title %>
        <%= f.input :heading %>
        <%= f.input :keywords %>
        <%= f.input :description %>
      <% end %>
    <% end %>    

    <%= tab_pane :about do %>
      <%= f.input :motto %>
      <%= f.input :content, as: :html %>
    <% end %>
  <% end %>

  <%= language_input f %>

  <div class="form-actions">
    <%= f.button :submit, save_or_update(@designer), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_designers_path, :class => 'btn' %>
  </div>
<% end %>
