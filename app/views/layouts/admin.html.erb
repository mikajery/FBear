<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin</title>
  <link rel="shortcut icon" href="<%= image_url("content/favicon.ico") %>">
  <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

</head>
<body>
    <div class="container">

        <%= nav_bar fixed: :top, responsive: true, inverse: true, dark: true do %>
            <%= brand_link 'CMS', admin_root_path %>

            <%= menu_group do %>
                <%= drop_down "Сайт" do %>
                  <%= menu_item "Меню", admin_menus_path %>
                  <%= menu_item "Страницы", admin_pages_path %>
                <% end %>

                <%= drop_down "Контент" do %>
                  <%= menu_item "Блоги", admin_post_categories_path %>
                  <%= menu_item "Каталог", admin_good_categories_path %>
                  <%= menu_item "Дизайнеры", admin_designers_path %>
                  <%= menu_item "Тэги", admin_tags_path %>
                  <%= menu_item "Материалы", admin_materials_path %>
                  <%= menu_item "Свойства товаров", admin_property_types_path %>
                <% end %>

                <%= drop_down "Настройки" do %>
                  <%= menu_item "Языки", admin_languages_path %>
                  <%= menu_item "Переводы", admin_translations_path %>
                  <%= menu_item "Параметры", admin_settings_path %>
                <% end %>
            <% end %>

            <%= menu_group pull: :right do %>
                <%= menu_item do %>
                  Выход
                <% end %>
            <% end %>
        <% end %>

        <%= yield %>
    </div>
</body>
</html>
