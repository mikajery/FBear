<%- model_class = Language -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
            new_language_path,
            :class => 'btn btn-mini' %>
  </h1>
</div>

<% if @languages.empty? %>
  <div class="well">
    Пусто :(
  </div>
<% else %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Язык</th>
        <th width="25%"><%= model_class.human_attribute_name(:slug) %></th>
        <th width="60px"></th>
      </tr>
    </thead>
    <tbody>
      <% @languages.each do |language| %>
        <tr>
          <td><%= link_to language.full_name, edit_language_path(language) %></td>
          <td><%= language.slug %></td>        
          <td>
            <%= link_to t('.edit', :default => pencil_icon),
                        edit_language_path(language), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => trash_icon(true)),
                        language_path(language),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>