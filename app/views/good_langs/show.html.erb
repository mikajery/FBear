<%- model_class = GoodLang -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:good_id) %>:</strong></dt>
  <dd><%= @good_lang.good_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language_id) %>:</strong></dt>
  <dd><%= @good_lang.language_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @good_lang.slug %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @good_lang.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo) %>:</strong></dt>
  <dd><%= @good_lang.logo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @good_lang.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @good_lang.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_title) %>:</strong></dt>
  <dd><%= @good_lang.meta_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_keywords) %>:</strong></dt>
  <dd><%= @good_lang.meta_keywords %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_description) %>:</strong></dt>
  <dd><%= @good_lang.meta_description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              good_langs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_good_lang_path(@good_lang), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              good_lang_path(@good_lang),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
