<li<%= ' class=active' if current_url?(item.path) %>>
	<a href="<%= item.path %>">
    <%= item.title %>
  </a>
  <% unless item.items.empty? %>
    <ul class="b-submenu">
      <% item.items.each do |subitem| %>
        <li>
          <a href="<%= subitem.path %>">
            <%= subitem.title %>
          </a>
        </li>
      <% end %>
    </ul>
  <% end %>
</li>