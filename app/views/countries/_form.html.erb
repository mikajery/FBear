<%= simple_form_for(@country, :html => { class: 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.association :languages %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Back', countries_path, :class => 'btn' %>
  </div>
<% end %>
