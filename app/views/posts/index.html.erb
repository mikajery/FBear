<%- model_class = Post -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
                new_post_path,
                :class => 'btn btn-mini' %>
  </h1>
</div>

<% if @posts.empty? %>
  <%= empty_list %>
<% else %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Пост</th>
        <th width="60px"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post.id, edit_post_path(post) %>
          </td>
          <td>
            <%= link_to t('.edit', :default => pencil_icon),
                        edit_post_path(post), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => trash_icon(true)),
                        post_path(post),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>