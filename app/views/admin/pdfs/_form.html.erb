<%= language_prompt %>  

<%= simple_form_for [:admin, @pdf], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <% Globalize.with_locale(@locale.slug) do %>
    <%= f.input :name %>
  <% end %>

  <% unless @pdf.id %>
    <%= f.input :src, as: :file %>
    <%= f.input :good_id, as: :hidden %>
  <% end %>

  <%= language_input f %>

  <div class="form-actions">
    <%= f.button :submit, save_or_update(@pdf), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        edit_admin_good_path(@good, anchor: "pdfs"), :class => 'btn' %>
  </div>
<% end %>
