<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin</title>
  <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

</head>
<body>
    <div class="container">

        <%= nav_bar fixed: :top, responsive: true, inverse: true, dark: true do %>
            <%= brand_link 'CMS', admin_root_path %>

            <%= menu_group do %>
                <%= drop_down "Сайт" do %>
                  <%= menu_item "Меню", menus_path %>
                  <%= menu_item "Страницы", pages_path %>
                <% end %>

                <%= drop_down "Контент" do %>
                  <%= menu_item "Блоги", post_categories_path %>
                  <%= menu_item "Каталог", good_categories_path %>
                  <%= menu_item "Дизайнеры", designers_path %>
                <% end %>

                <%= drop_down "Настройки" do %>
                  <%= menu_item "Языки", languages_path %>
                  <%= menu_item "Параметры", settings_path %>
                  <%= menu_item "Материалы", materials_path %>
                <% end %>
            <% end %>

            <%= menu_group pull: :right do %>
                <%= menu_item do %>
                  Выход
                <% end %>
            <% end %>
        <% end %>

        <%= yield %>
    </div>
</body>
</html>
