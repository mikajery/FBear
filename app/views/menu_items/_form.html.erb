<ul class="nav nav-tabs">
  <li class="active"><a href="#main" data-toggle="tab">Основное</a></li>
  <li><a href="#layout" data-toggle="tab">Внешний вид</a></li>
  <li><a href="#meta" data-toggle="tab">META</a></li>
</ul>


<%= simple_form_for @menu_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="tab-content">
    <div class="tab-pane active" id="main">
      <%= f.input :title %>
      <%= f.input :heading %>
      <%= f.input :url, as: :string %>
      <%= f.input :is_absolute %>
    </div>

    <div class="tab-pane" id="layout">
      <%= f.association :templet, include_blank: t('prompt.templet') %>
    </div>

    <div class="tab-pane" id="meta">
      <%= f.input :meta_keywords %>
      <%= f.input :meta_description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  menu_menu_items_path, :class => 'btn' %>
    </div>
  </div>
<% end %>