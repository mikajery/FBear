<%- model_class = Setting -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
            new_setting_path,
            :class => 'btn btn-mini' %>
  </h1>
</div>

<% if @settings.empty? %>
  <%= empty_list %>
<% else %>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Переменная</th>
        <th width="60px"></th>
      </tr>
    </thead>
    <tbody>
      <% @settings.each do |setting| %>
        <tr>
          <td><%= link_to setting.key, edit_setting_path(setting) %></td>
          <td>
            <%= link_to t('.edit', :default => pencil_icon),
                        edit_setting_path(setting), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => trash_icon(true)),
                        setting_path(setting),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>