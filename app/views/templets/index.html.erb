<%- model_class = Templet -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
            new_templet_path,
            :class => 'btn btn-mini' %>

  </h1>
</div>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th width="60px"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @templets.each do |templet| %>
      <tr>
        <td>
          <%= link_to templet.name, edit_templet_path(templet) %>
          <%= content_tag :div, templet.filename, class: 'muted' if templet.filename %>
        </td>

        <td>
          <%= link_to t('.edit', :default => pencil_icon),
                      edit_templet_path(templet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => trash_icon(true)),
                      templet_path(templet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>