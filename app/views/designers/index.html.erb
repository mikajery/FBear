<%- model_class = Designer -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %>
    <%= link_to t('.new', :default => plus_icon),
            new_designer_path,
            :class => 'btn btn-mini' %>
  </h1>
</div>

<% if @designers.empty? %>
  <%= empty_list %>
<% else %>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:photo) %></th>
        <th width="60px"></th>
      </tr>
    </thead>
    <tbody>
      <% @designers.each do |designer| %>
        <tr>
          <td><%= designer.photo %></td>
          <td>
            <%= link_to t('.edit', :default => pencil_icon),
                        edit_designer_path(designer), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => trash_icon(true)),
                        designer_path(designer),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>