<%- model_class = GoodLang -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:good_id) %></th>
      <th><%= model_class.human_attribute_name(:language_id) %></th>
      <th><%= model_class.human_attribute_name(:slug) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:logo) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:meta_title) %></th>
      <th><%= model_class.human_attribute_name(:meta_keywords) %></th>
      <th><%= model_class.human_attribute_name(:meta_description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @good_langs.each do |good_lang| %>
      <tr>
        <td><%= link_to good_lang.id, good_lang_path(good_lang) %></td>
        <td><%= good_lang.good_id %></td>
        <td><%= good_lang.language_id %></td>
        <td><%= good_lang.slug %></td>
        <td><%= good_lang.name %></td>
        <td><%= good_lang.logo %></td>
        <td><%= good_lang.price %></td>
        <td><%= good_lang.description %></td>
        <td><%= good_lang.meta_title %></td>
        <td><%= good_lang.meta_keywords %></td>
        <td><%= good_lang.meta_description %></td>
        <td><%=l good_lang.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_good_lang_path(good_lang), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      good_lang_path(good_lang),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_good_lang_path,
            :class => 'btn btn-primary' %>
